@model SampleBank.Models.Transaction

@{
	ViewData["Title"] = "Create";
}

<h1>Deposit</h1>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="transactionType" value=@transactionTypes.deposit>
    <div class="container">
        <div class="row">
            <div class="form-group col-3 m-auto">
                <div class="row align-items-center justify-content-center">
                    <h5 class="text-center">Amount</h5>
                    <input class="form-control" asp-for="amount" type="number" min="0" max="500" id="amountInput"/>
                    <span asp-validation-for="amount" class="text-danger"></span>
                </div>
                <div class="row">
                    <h1 class="fas fa-money-bill col" style="text-align: right;"></h1>
                    <h1 class="fas fa-arrow-right col"></h1>
                </div>
            </div>
			
			<div class="form-group col-4">
                <h5 class="text-center">Transfer from</h5>
                <div class="cards-container">
                    @foreach (BankAccount account in ViewBag.userBankAccounts){
                        <div class="col-10 mb-3 mx-auto">
                            <label class="container-label">
                                <input class="card-input-element d-none" type="radio" name="accountId" value="@account.id">
                                <partial name="/Views/BankAccounts/_BankAccountCard.cshtml" model="@account"/>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
        <hr/>
        <div class="form-group mt-4 row w-25 m-auto">
            <input type="submit" value="submit transaction" class="btn btn-primary" id="submitButton" disabled/>
        </div>
    </div>
</form>
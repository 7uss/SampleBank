@model SampleBank.Models.BankAccount
@{
    var expirationDate = @Model.expirationDate.ToString("yy/MM");
}

<div class="container bank-card p-3">
    <div class="row">
        <h5>@Model.beneficiaryName</h5>
    </div>
    <hr class="mt-0"/>
    <div class="row">
        <h5>Balance</h5>
        <p class="mb-0">@Model.balance KWD</p>
    </div>
    <hr class="mt-0"/>
    <div class="row">
        <h5>Account Number</h5>
        <p class="mb-0">@Model.accountNumber</p>
    </div>
    <hr class="mt-0"/>
    <div class="row">
        <h5>Expiry</h5>
        <p class="mb-0">@expirationDate</p>
    </div>
</div>